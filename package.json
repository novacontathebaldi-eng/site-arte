{
  "name": "pelussi-art-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:cliente": "turbo run dev --filter=cliente",
    "dev:controle": "turbo run dev --filter=controle",
    "build": "turbo run build",
    "build:cliente": "turbo run build --filter=cliente",
    "build:controle": "turbo run build --filter=controle",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  }
}
