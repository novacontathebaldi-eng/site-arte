rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPERS (Funções Auxiliares) --- //
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o usuário é admin de forma segura (checa se o doc existe primeiro)
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Verifica se o usuário logado é o dono do documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- REGRAS DE COLEÇÕES --- //

    // 1. Usuários e Subcoleções (Carrinho, Wishlist, Endereços)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();

      match /cart/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /wishlist/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /addresses/{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // 2. Produtos (Público pode ler, Admin pode escrever)
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. Categorias (ESSENCIAL PARA O NOVO BOARD)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 4. Pedidos
    match /orders/{orderId} {
      // Qualquer autenticado pode criar um pedido
      allow create: if isAuthenticated();
      // Ler apenas seus próprios pedidos ou se for admin
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      // Apenas admin pode atualizar status/rastreio via Client SDK
      // (O usuário comum não edita pedidos depois de criados, o backend faz isso)
      allow update: if isAdmin();
    }

    // 5. Chatbot, Logs & Configurações
    match /chat_logs/{logId} {
      allow create: if true; // Permite logs de visitantes anônimos
      allow read: if isAdmin();
    }

    match /chatbot_settings/{docId} {
      allow read: if true; // Necessário para o frontend carregar configs do chat
      allow write: if isAdmin();
    }

    match /chat_feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /chatbot_knowledge_base/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /admin_audit_logs/{logId} {
       allow read, write: if isAdmin();
    }
  }
}